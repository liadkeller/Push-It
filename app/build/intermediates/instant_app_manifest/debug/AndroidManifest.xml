<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liadk.android.pushit"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="24" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.liadk.android.pushit.ExploreActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.liadk.android.pushit.PageActivity"
            android:parentActivityName="com.liadk.android.pushit.ExploreActivity" />
        <activity
            android:name="com.liadk.android.pushit.PageSettingsActivity"
            android:parentActivityName="com.liadk.android.pushit.PageActivity" >

            <!--
                <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".PageActivity"/>
            -->
        </activity>
        <activity
            android:name="com.liadk.android.pushit.PageLogoActivity"
            android:parentActivityName="com.liadk.android.pushit.PageSettingsActivity" />
        <activity
            android:name="com.liadk.android.pushit.ItemActivity"
            android:parentActivityName="com.liadk.android.pushit.PageActivity" >

            <!--
                <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".PageActivity"/>
            -->
        </activity>
        <activity
            android:name="com.liadk.android.pushit.EditItemActivity"
            android:parentActivityName="com.liadk.android.pushit.ItemActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" >

            <!--
            <meta-data android:name="android.support.PARENT_ACTIVITY" TODO Take Care Of.
            android:value=".ItemActivity"/>
            -->
        </activity>
        <activity
            android:name="com.liadk.android.pushit.CreateNotificationActivity"
            android:parentActivityName="com.liadk.android.pushit.EditItemActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.liadk.android.pushit.com.vansuita.pickimage.provider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/picker_provider_paths" />
        </provider>
    </application>

</manifest>