        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/seg2EditText"
            android:hint="@string/add_text_hint"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_photo"
            android:id="@+id/addPhotoButton"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"/>

        <!--
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_video"
            android:id="@+id/addVideoButton"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"/>
        -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/saveChangesLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:text="@string/item_save_label" />

            <Button
                android:id="@+id/confirmChangesButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:text="@string/confirm_changes" />
        </LinearLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_mode_label"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/published_article_text_view"
                android:layout_margin="8dp"
                android:id="@+id/publishedTextView"
                android:gravity="center"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/publish_article_push"
                android:id="@+id/publishButton"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/post_article"
                android:id="@+id/createButton"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_draft"
            android:id="@+id/draftButton"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete_article"
            android:id="@+id/deleteButton"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:backgroundTint="@color/lightRed"
            android:textColor="@color/specialButtonTextColor"/>

    </LinearLayout>
</ScrollView>